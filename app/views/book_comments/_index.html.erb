 <% book.book_comments.each do |book_comment| %>
  <%= link_to user_path(book_comment.user) do %>
    <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
    <%= book_comment.user.name %>
  <% end %>
<%= book_comment.comment %>
  <% if book_comment.user == current_user %>
    <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_post_comment_#{book_comment.id}", remote: true %>
  <% end %>
  <br />
<% end %>